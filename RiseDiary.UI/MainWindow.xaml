<Window x:Class="RiseDiary.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RiseDiary.UI"
        mc:Ignorable="d"
        Title="Rise Diary" Height="700" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Width="100" Height="30" Margin="10 0 10 0" Click="Button_Click">Areas</Button>
        </StackPanel>

        <Frame x:Name="mainFrame" Grid.Row="1" Background="AliceBlue" NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
