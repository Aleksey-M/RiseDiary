<Page x:Class="RiseDiary.UI.Pages.AreasPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RiseDiary.UI"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="790"
      Title="AreasPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <ComboBox x:Name="cbArea" Width="200" Margin="10" IsEditable="True" StaysOpenOnEdit="True" ItemsSource="{Binding Path=_areas}" />
            <TextBox x:Name="tbRecordType" Width="200" Margin="10"/>
            <Button Margin="10" Width="90" Click="Button_Click">Сохранить</Button>
        </StackPanel>

        <ListView Grid.Row="1" ItemsSource="{Binding Path=_areasAndTypes}">
            
        </ListView>
    </Grid>
</Page>
