@page
@model IndexModel
@{
    ViewData["Title"] = "Loading Photos";
}

<div class="text-center">
    <h3>Load Photos into database</h3>
    <div class="text-center"><h5 class="text-danger" id="errMessage"></h5></div>
    <div class="form-inline" style="margin:10px auto; width:520px;">
        <input type="text" id="dirNameInput" name="dirNameInput" placeholder="Folder with photos" class="form-control" style="margin-right:10px; width:300px;" />
        <button type="button" id="searchFiles" class="btn btn-info" style="margin-right:10px; width:120px;">Load Photos</button>
        <button type="button" id="cancelLoading" class="btn btn-warning" disabled="disabled" style="width:70px;">Cancel</button>
    </div>

    <div class="text-center">
        <h5 id="loadedFilesCount"></h5>        
    </div>
    <div class="progress" style="margin:5px auto;width:420px;display:none" id="progressDiv">
        <div class="progress-bar progress-bar-striped progress-bar-animated" style="width:0%;height:20px" id="progressBar">
            0%
        </div>
    </div>
</div>

