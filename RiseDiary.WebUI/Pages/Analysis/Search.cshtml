@page
@model RiseDiary.WebUI.Pages.Analysis.IndexModel
@using RiseDiary.Model
@{
    ViewData["Title"] = "Поиск записей по фрагменту названия или текста";
}

    <div class="col-12">
        <div class="my-3 px-3">
            <component type="typeof(Pager)" render-mode="Static" param-areaName="@("analysis/search")" param-pages="@Model.Pages" param-getParametersList="@Model.SearchParams" />
        </div>
    </div>
    
    <div class="col-12">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        <form method="get">
                            <div class="row px-2">

                                <input type="hidden" name="pageNo" value="1" />

                                <div class="offset-lg-2 col-lg-6 col-md-10 mb-2">
                                    <input type="text" placeholder="Строка поиска" name="searchString" id="searchString" value="@Model.SearchString" class="form-control" />
                                </div>

                                <div class="col-lg-2 col-md-2 mb-2">
                                    <input type="submit" value="Поиск" class="btn btn-outline-info" />
                                </div>

                            </div>
                        </form>
                    </th>
                </tr>               
            </thead>
        </table>
        <table class="table table-striped">
            <tbody>
                    @foreach (var rec in Model.Records)
                    {
                        <tr>
                            <td class="main-date-column">@rec.Date.ToString("yyyy.MM.dd")</td>
                            <td><a href="~/Records/View?recordId=@rec.Id">@rec.GetRecordNameDisplay()</a></td>
                            <td class="date-column"><script type="text/javascript">document.write(convertToLocalDate('@rec.CreateDate.ToString("yyyy.MM.dd HH:mm:ss")'))</script></td>
                            <td class="date-column"><script type="text/javascript">document.write(convertToLocalDate('@rec.ModifyDate.ToString("yyyy.MM.dd HH:mm:ss")'))</script></td>                           
                        </tr>
                    }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="5"><b><i>Записей отфильтровано : @Model.Pages.TotalItems </i></b></td>
                </tr>
            </tfoot>
        </table>
    </div>

    <div class="col-12">
        <div class="my-3 px-3">
            <component type="typeof(Pager)" render-mode="Static" param-areaName="@("analysis/search")" param-pages="@Model.Pages" param-getParametersList="@Model.SearchParams" />
        </div>
    </div>