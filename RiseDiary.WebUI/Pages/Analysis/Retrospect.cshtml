@page "{handler?}"
@model RiseDiary.WebUI.Pages.RetrospectModel
@{
    ViewData["Title"] = "Ретроспектива";
    ViewData["TitlePart"] = "Ретроспектива";
}

<table class="table table-striped" style="table-layout:fixed">
    <thead>
        <tr>
            <th style="vertical-align: middle;width:10%">Дата</th>
            <th style="vertical-align: middle;width:20%">Название</th>
            <th style="vertical-align: middle;width:30%">Текст записи</th>
            <th style="vertical-align: middle;">Дата создания</th>
            <th style="vertical-align: middle;">Дата изменения</th>
            <th colspan="2" style="text-align:center;width:15%">
                <input type="hidden" name="currentPageNo" id="currentPageNo" value="@Model.Filters.PageNo" />
                <ul class="pagination pagination-sm" style="margin:0px;">
                    <li class="page-item">
                        <a href="#" id="prevPage">&nbsp;&lt;&nbsp;</a>
                    </li>
                    <li class="page-item active">
                        <input type="hidden" id="currentPage" value="@Model.Filters.PageNo" />
                        <span>@(Model.Filters.PageNo + 1) / @(Math.Ceiling((float)Model.RecordsCount / Model.Filters.PageSize))</span>
                    </li>
                    <li class="page-item">
                        <a href="#" id="nextPage">&nbsp;&gt;&nbsp;</a>
                    </li>
                </ul>
            </th>
        </tr>
        <tr>
            <th style="padding:2px;">
                <input type="text" class="form-control" style="margin:0px;" placeholder="От" id="filterFromDate" value="@(Model.Filters.RecordDateFrom?.ToString("yyyy.MM.dd") ?? string.Empty)" />
                <input type="text" class="form-control" placeholder="До" id="filterToDate" value="@(Model.Filters.RecordDateTo?.ToString("yyyy.MM.dd") ?? string.Empty)" />
            </th>
            <th style="padding:2px;vertical-align: middle;">
                <input type="text" class="form-control" placeholder="Фильтр по названию" id="filterName" value="@Model.Filters.RecordNameFilter" />
            </th>
            <th colspan="3" style="vertical-align: middle;">
                <select multiple="multiple" name="themes[]" id="themes" placeholder="Темы" class="form-control themes-select" style="width:560px; height:30px;">
                    @foreach (var scope in Model.AllScopes)
                    {
                        <optgroup label="@scope.ScopeName">
                            @foreach (var theme in Model.AllThemes.Where(t => t.ScopeId == scope.Id))
                            {
                                @if (Model.SelectedThemes.Contains(theme.Id))
                                {
                                    <option selected="selected" value="@theme.Id">@theme.ThemeName</option>
                                }
                                else
                                {
                                    <option value="@theme.Id">@theme.ThemeName</option>
                                }
                            }
                        </optgroup>
                    }
                </select>
            </th>
            <th colspan="2" style="vertical-align: middle;text-align:center">
                <a class="btn btn-default" id="btnSearch">Поиск</a>
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td colspan="7">
                @foreach (var recWithCogs in Model.Records)
                {
                    <div class="row" style="margin-bottom:20px;">
                        <div class="col-sm-10 col-sm-offset-1" style="border:1px solid #66FF00; background-color:#CCFFAA;border-radius:20px;margin-bottom:7px;padding:15px">
                            <p><b><i><a href="~/Records/Edit?recordId=@recWithCogs.Key.Id">@recWithCogs.Key.Date.ToString("yyyy.MM.dd")</a></i>&nbsp;&nbsp;&nbsp;@recWithCogs.Key.Name</b></p>
                            <textarea style="border:none; width:100%; height:400px; background-color:#CCFFAA" readonly="readonly">@recWithCogs.Key.Text</textarea>
                        </div>
                        @foreach (var cog in recWithCogs.Value)
                        {
                            <div class="col-sm-9 col-sm-offset-2" style="border:1px solid #33CCCC; background-color:#CCFFFF;border-radius:20px;margin-bottom:7px;padding:15px">
                                <p><b><i><a href="~/Records/View?recordId=@recWithCogs.Key.Id">@cog.Date.ToString("yyyy.MM.dd HH:mm:ss")</a></i></b></p>
                                <textarea style="border:none; width:100%; height:200px; background-color:#CCFFFF" readonly="readonly">@cog.Text</textarea>
                            </div>
                        }
                    </div>
                }
            </td>
        </tr>        
    </tbody>
    <tfoot>
        <tr>
            <td colspan="7"><b><i>Записей отфильтровано : @Model.RecordsCount </i></b></td>
        </tr>
    </tfoot>
</table>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script src="~/js/autosize.js"></script>
    
    <script type="text/javascript">

        function getThemesUri(themes) {
            if (themes === null) return "";
            let res = "";
            for (let i = 0; i < themes.length; i++) {
                res = res + "&themes=" + themes[i];
            }
            return res;
        }

        $(function () {
            $("#filterFromDate").datepicker({ dateFormat: 'yy.mm.dd' });
            $("#filterToDate").datepicker({ dateFormat: 'yy.mm.dd' });

            $("#btnSearch").on('click', function () {
                window.location.replace(
                    'Retrospect?handler=Search' +
                    '&fromDate=' + encodeURIComponent($("#filterFromDate").val()) +
                    '&toDate=' + encodeURIComponent($("#filterToDate").val()) +
                    getThemesUri($('.themes-select').val()) +
                    '&searchName=' + encodeURIComponent($("#filterName").val()));
            });
            $("#prevPage").on('click', function () {
                window.location.replace(
                    'Retrospect?handler=PrevPage' +
                    '&fromDate=' + encodeURIComponent($("#filterFromDate").val()) +
                    '&toDate=' + encodeURIComponent($("#filterToDate").val()) +
                    getThemesUri($('.themes-select').val()) +
                    '&searchName=' + encodeURIComponent($("#filterName").val()) +
                    '&pageNo=' + encodeURIComponent($("#currentPage").val()));
            });
            $("#nextPage").on('click', function () {
                window.location.replace(
                    'Retrospect?handler=NextPage' +
                    '&fromDate=' + encodeURIComponent($("#filterFromDate").val()) +
                    '&toDate=' + encodeURIComponent($("#filterToDate").val()) +
                    getThemesUri($('.themes-select').val()) +
                    '&searchName=' + encodeURIComponent($("#filterName").val()) +
                    '&pageNo=' + encodeURIComponent($("#currentPage").val()));
            });

            $('.themes-select').SumoSelect({ csvDispCount: 7 });
            $('.SumoSelect').width('500px');

            autosize($('textarea'));
        });

    </script>
}