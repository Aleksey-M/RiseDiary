<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <title>@ViewData["Title"] - RiseDiary</title>
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/jquery-ui/jquery-ui.css" rel="stylesheet" />
    <link href="~/lib/sumoselect/sumoselect.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-year-calendar/css/bootstrap-year-calendar.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery.js"></script>

    @RenderSection("Styles", required: false)

</head>
<body>
    <div class="container alert-info" style="margin-bottom:10px">
        <h3 class="col-sm-10"> <a asp-page="Index">Дневник:</a> <span style="font-size:smaller">@ViewData["TitlePart"]</span></h3>
        <a class="btn btn-info" href="~/Records/Edit" style="float:right;margin-top:10px;">Создать запись</a>
    </div>
    <nav class="container">
        <div class="btn-group btn-group-justified">
            <a href="~/Scopes" class="btn btn-info">Темы</a>
            <a href="~/Images" class="btn btn-info">Изображения</a>
            <a href="~/Dates" class="btn btn-info">Даты</a>
            <a href="~/Records" class="btn btn-info">Все записи</a>
            <a href="~/Analysis/Search" class="btn btn-info">Поиск по тексту</a>
            <a href="~/Analysis/Retrospect" class="btn btn-info">Ретроспектива</a>
            <a href="~/Analysis/Calendar" class="btn btn-info">Календарь</a>
        </div>
    </nav>

    <div class="container body-content">
        <hr style="margin-top:5px;margin-bottom:5px;" />
        @RenderBody()
        <hr />
        <h6>Rise Diary V 5.2.0&nbsp;&nbsp;<a href="/config"><i class="glyphicon glyphicon-wrench"></i></a></h6>

    </div>

    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <script src="~/lib/jquery-ui/jquery-ui.js"></script>
    <script src="~/lib/sumoselect/jquery.sumoselect.js"></script>
    <script src="~/_framework/blazor.server.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
