@page
@model RiseDiary.WebUI.Pages.Settings.PageSizeModel
@{
    ViewData["Title"] = "Настройки"; 
}

    <form method="post" asp-page-handler="UpdateImagesPageSize">
         <div class="row mt-2 mb-3">
             <div class="col-lg-8 col-md-6 col-sm-12 mt-1">
                 <b>Количество миниатюр картинок, выводимое на одну страницу</b>
             </div>

             <div class="col-lg-2 col-md-3 col-sm-6 mt-1">
                 <span asp-validation-for="ImagesPageSize" style="color:red"></span>
                 <input asp-for="ImagesPageSize" class="form-control" />
             </div>

             <div class="col-lg-2 col-md-3 col-sm-6 mt-1">
                 <button type="submit" class="btn btn-outline-success form-control">Сохранить</button>
             </div>
         </div>
    </form>

     <form method="post" asp-page-handler="UpdateRecordsPageSize">
         <div class="row mt-2 mb-3">
             <div class="col-lg-8 col-md-6 col-sm-12 mt-1">
                 <b>Количество записей, выводимое на одну страницу</b>
             </div>

             <div class="col-lg-2 col-md-3 col-sm-6 mt-1">
                 <span asp-validation-for="RecordsPageSize" style="color:red"></span>
                 <input asp-for="RecordsPageSize" class="form-control" />
             </div>

             <div class="col-lg-2 col-md-3 col-sm-6 mt-1">
                 <button type="submit" class="btn btn-outline-success form-control">Сохранить</button>
             </div>
         </div>
     </form>