@page
@model RiseDiary.WebUI.Pages.Settings.IndexModel
@{
    ViewData["Title"] = "Просмотр удаленных данных";
}

@if (Model.DeletedData.Records.Count() > 0)
{
    <br />
    <h4 style="color:darkblue">Удаленные записи</h4>

    foreach(var x in Model.DeletedData.Records)
    {
        <hr />
        <h5>@x.Id: <i>@x.Date</i> @x.Name</h5>
        <p>@x.Text</p>
    }
}

@if (Model.DeletedData.RecordsCogitations.Count() > 0)
{
    <br />
    <h4 style="color:darkblue">Удаленные осмысления (комментарии)</h4>

    foreach(var x in Model.DeletedData.RecordsCogitations)
    {
        <hr />        
        <h5>@x.CogitationId: <i>@x.Date</i> <b>(Запись @x.RecordId: "@x.RecordName")</b></h5>
        <p>@x.Text</p>
    }
}

@if (Model.DeletedData.RecordsThemes.Count() > 0)
{
    <br />
    <hr />
    <table>
        <thead>
            <tr>
                <th colspan="4"><h4 style="color:darkblue">Исключенные темы записей</h4></th>
            </tr>
            <tr>
                <th>Id темы</th>
                <th>Название темы</th>
                <th>Id записи</th>
                <th>Название записи</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var x in Model.DeletedData.RecordsThemes)
            {
                <tr>
                    <td>@x.ThemeId</td>
                    <td>@x.ThemeName</td>
                    <td>@x.RecordId</td>
                    <td>@x.RecordName</td>
                </tr>
            }
        </tbody>
    </table>
}

@if (Model.DeletedData.RecordsImages.Count() > 0)
{
    <br />
    <hr />
    <table>
        <thead>
            <tr>
                <th colspan="4"><h4 style="color:darkblue">Открепленные от записей изображения</h4></th>
            </tr>
            <tr>
                <th>Id изображения</th>
                <th>Изображение</th>
                <th>Id записи</th>
                <th>Название записи</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var x in Model.DeletedData.RecordsImages)
            {
                <tr>
                    <td>@x.ImageId</td>
                    <td><img src="data:image/png;base64,@x.ImageThumbnail" /> </td>
                    <td>@x.RecordId</td>
                    <td>@x.RecordName</td>
                </tr>
            }
        </tbody>
    </table>
}

@if (Model.DeletedData.Scopes.Count() > 0)
{
    <br />
    <hr />
    <table>
        <thead>
            <tr>
                <th colspan="2"><h4 style="color:darkblue">Удаленные сферы интересов</h4></th>
            </tr>
            <tr>
                <th>Id сферы интересов</th>
                <th>Название</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var x in Model.DeletedData.Scopes)
            {
                <tr>
                    <td>@x.Id</td>
                    <td>@x.Name</td>
                </tr>
            }
        </tbody>
    </table>
}

@if (Model.DeletedData.Themes.Count() > 0)
{
    <br />
    <hr />
    <table>
        <thead>
            <tr>
                <th colspan="3"><h4 style="color:darkblue">Удаленные темы</h4></th>
            </tr>
            <tr>
                <th>Id Темы</th>
                <th>Название темы</th>
                <th>Название сферы интересов</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var x in Model.DeletedData.Themes)
            {
                <tr>
                    <td>@x.Id</td>
                    <td>@x.ThemeName</td>
                    <td>@x.ScopeName</td>
                </tr>
            }
        </tbody>
    </table>
}

@if (Model.DeletedData.Images.Count() > 0)
{
    <br />
    <hr />
    <table>
        <thead>
            <tr>
                <th colspan="3"><h4 style="color:darkblue">Удаленные изображения</h4></th>
            </tr>
            <tr>
                <th>Id изображения</th>                
                <th>Название изображения</th>
                <th>Изображение</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var x in Model.DeletedData.Images)
            {
                <tr>
                    <td>@x.Id</td>
                    <td>@x.Name</td>
                    <td><img src="data:image/png;base64,@x.Thumbnail" /> </td>
                </tr>
            }
        </tbody>
    </table>
}