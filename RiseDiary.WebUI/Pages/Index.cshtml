@page
@model IndexModel
@{
    ViewData["Title"] = "Дневник";
    ViewData["TitlePart"] = "Стартовая страница";
}

@if (Model.StartPageRecord != null)
{
    @Html.Raw(Model.StartPageRecord.Text)
    <br />
    <h6><a asp-page="Records/View" asp-route-recordId="@Model.StartPageRecord.Id.ToString()">Открыть запись</a></h6>
}
else
{
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
            <h3 style="color:silver">Стартовая страница не выбрана</h3>
        </div>
    </div>
}
